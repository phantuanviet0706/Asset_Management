@page
@model Project_PRN.Pages.AssetVendor.CreateModel
@{
    var profile = Model.userProfile;
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/Settings.css" />
<link rel="stylesheet" href="~/css/CRUD.css" />

<header class="sticky-header">
    <div id="navbar">
        <a href="/Asset">Home</a>
        <a href="">Transactions</a>
        <a href="/Setting">Settings</a>
        <div id="user-info" style="float: right;">
            <a asp-page="/User/Details" asp-route-id="@profile.Id">
                @Html.DisplayFor(model => model.userProfile.Email)
            </a>
        </div>
    </div>
</header>

<div class="row create-form-asset">
    <div class="col-md-4">
        <h3 class="create-object-text">Create Vendor</h3>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-danger error-message-text">@ViewData["msg"]</div>
            <div class="form-group">
                <label asp-for="AssetVendor.Name" class="control-label"></label>
                <input asp-for="AssetVendor.Name" class="form-control" />
                <span asp-validation-for="AssetVendor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                Contact Name
                <input asp-for="AssetVendor.ContactName" class="form-control" />
                <span asp-validation-for="AssetVendor.ContactName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssetVendor.Phone" class="control-label"></label>
                <input asp-for="AssetVendor.Phone" class="form-control" />
                <span asp-validation-for="AssetVendor.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssetVendor.Email" class="control-label"></label>
                <input asp-for="AssetVendor.Email" class="form-control" />
                <span asp-validation-for="AssetVendor.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssetVendor.Website" class="control-label"></label>
                <input asp-for="AssetVendor.Website" class="form-control" />
                <span asp-validation-for="AssetVendor.Website" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssetVendor.Address" class="control-label"></label>
                <input asp-for="AssetVendor.Address" class="form-control" />
                <span asp-validation-for="AssetVendor.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssetVendor.Description" class="control-label"></label>
                <textarea asp-for="AssetVendor.Description" class="form-control" ></textarea>
                <span asp-validation-for="AssetVendor.Description" class="text-danger"></span>
            </div>
            <div class="form-group btn-action">
                <input type="submit" value="Create" class="btn btn-success" />
                <a href="/Setting/Vendors" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
