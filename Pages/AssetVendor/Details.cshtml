@page
@model Project_PRN.Pages.AssetVendor.DetailsModel
@{
    var profile = Model.userProfile;
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/Settings.css" />
<link rel="stylesheet" href="~/css/CRUD.css" />

<header class="sticky-header">
    <div id="navbar">
        <a href="/Asset">Home</a>
        <a href="">Transactions</a>
        <a href="/Setting">Settings</a>
        <div id="user-info" style="float: right;">
            <a asp-page="/User/Details" asp-route-id="@profile.Id">
                @Html.DisplayFor(model => model.userProfile.Email)
            </a>
        </div>
    </div>
</header>

<div>
    <h3 class="create-object-text">Asset Vendor</h3>
    <hr />
    <dl class="row create-form-asset">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssetVendor.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssetVendor.Name)
        </dd>
        <dt class="col-sm-2">
            Contact Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssetVendor.ContactName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssetVendor.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssetVendor.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssetVendor.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssetVendor.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssetVendor.Website)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssetVendor.Website)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssetVendor.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssetVendor.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssetVendor.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssetVendor.Description)
        </dd>
    </dl>
</div>
<div class="user-action">
    <a asp-page="./Edit" asp-route-id="@Model.AssetVendor?.Id">Edit</a> |
    <a asp-page="/Setting/Vendors">Back to List</a>
</div>
