@page
@model Project_PRN.Pages.AssetLocation.DeleteModel
@{
    var profile = Model.userProfile;
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/Settings.css" />
<link rel="stylesheet" href="~/css/CRUD.css" />

<header class="sticky-header">
    <div id="navbar">
        <a href="/Asset">Home</a>
        <a href="">Transactions</a>
        <a href="/Setting">Settings</a>
        <div id="user-info" style="float: right;">
            <a asp-page="/User/Details" asp-route-id="@profile.Id">
                @Html.DisplayFor(model => model.userProfile.Email)
            </a>
        </div>
    </div>
</header>

<div>
    <h3 class="create-object-text">Are you sure you want to delete this?</h3>
    <hr />
    <dl class="row create-form-asset">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssetLocation.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssetLocation.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssetLocation.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssetLocation.Description)
        </dd>
    </dl>
    
    <form method="post" class="user-action">
        <input type="hidden" asp-for="AssetLocation.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Setting/Index">Back to List</a>
    </form>
</div>
