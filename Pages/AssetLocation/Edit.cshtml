@page
@model Project_PRN.Pages.AssetLocation.EditModel
@{
    var profile = Model.userProfile;
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/Settings.css" />
<link rel="stylesheet" href="~/css/CRUD.css" />

<header class="sticky-header">
    <div id="navbar">
        <a href="/Asset">Home</a>
        <a href="">Transactions</a>
        <a href="/Setting">Settings</a>
        <div id="user-info" style="float: right;">
            <a asp-page="/User/Details" asp-route-id="@profile.Id">
                @Html.DisplayFor(model => model.userProfile.Email)
            </a>
        </div>
    </div>
</header>
<div class="row create-form-asset">
    <div class="col-md-4">
        <h3 class="create-object-text">Update Location Info</h3>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-danger error-message-text">@ViewData["msg"]</div>
            <input type="hidden" asp-for="AssetLocation.Id" />
            <div class="form-group">
                <label asp-for="AssetLocation.Name" class="control-label"></label>
                <input asp-for="AssetLocation.Name" class="form-control" />
                <span asp-validation-for="AssetLocation.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssetLocation.Description" class="control-label"></label>
                <input asp-for="AssetLocation.Description" class="form-control" />
                <span asp-validation-for="AssetLocation.Description" class="text-danger"></span>
            </div>
            <div class="form-group btn-action">
                <input type="submit" value="Save" class="btn btn-success" />
                <a href="/Setting/Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
