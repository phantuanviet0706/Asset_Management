@page
@model Project_PRN.Pages.Asset.EditModel
@{
    var profile = Model.userProfile;
    Layout = "_Layout";
    var i = 1;
}
    <link rel="stylesheet" href="~/css/Settings.css" />
    <link rel="stylesheet" href="~/css/CRUD.css" />

    <header class="sticky-header">
        <div id="navbar">
            <a href="/Asset">Home</a>
            <a href="/AssetTransaction">Transactions</a>
            <a href="/Setting">Settings</a>
            <div id="user-info" style="float: right;">
            <a asp-page="/User/Details" asp-route-id="@profile.Id">
                @Html.DisplayFor(model => model.userProfile.Email)
                </a>
            </div>
        </div>
    </header>
<div class="row create-form-asset">
    <div class="col-md-12 row">
        <h3 class="create-object-text">Update Asset</h3>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-danger error-message-text">@ViewData["msg"]</div>
            <input type="hidden" asp-for="Asset.Id" />
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Asset.Name" class="control-label"></label>
                    <input asp-for="Asset.Name" class="form-control" />
                    <span asp-validation-for="Asset.Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Asset.Code" class="control-label"></label>
                    <input asp-for="Asset.Code" class="form-control" />
                    <span asp-validation-for="Asset.Code" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="Asset.LocationId" class="control-label"></label>
                    <select asp-for="Asset.LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
                    <span asp-validation-for="Asset.LocationId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Asset.TypeId" class="control-label"></label>
                    <select asp-for="Asset.TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
                    <span asp-validation-for="Asset.TypeId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Asset.VendorId" class="control-label"></label>
                    <select asp-for="Asset.VendorId" class="form-control" asp-items="ViewBag.VendorId"></select>
                    <span asp-validation-for="Asset.VendorId" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <label asp-for="Asset.AcquisitionDate" class="control-label"></label>
                <input asp-for="Asset.AcquisitionDate" class="form-control" />
                <span asp-validation-for="Asset.AcquisitionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asset.Description" class="control-label"></label>
                <textarea asp-for="Asset.Description" class="form-control" ></textarea>
                <span asp-validation-for="Asset.Description" class="text-danger"></span>
            </div>
            <div class="form-group btn-action">
                <input type="submit" value="Save" class="btn btn-success" />
                <a href="/Asset/Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
