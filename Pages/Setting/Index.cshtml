@page
@model Project_PRN.Pages.Setting.IndexModel
@{
    var profile = Model.userProfile;
    Layout = "_Layout";
}
    <link rel="stylesheet" href="~/css/Settings.css" />

    <header class="sticky-header">
        <div id="navbar">
            <a href="/Asset">Home</a>
            <a href="">News</a>
            <a href="/Setting">Settings</a>
            <div id="user-info" style="float: right;">
            <a asp-page="/User/Details" asp-route-id="@profile.Id">
                    @Html.DisplayFor(model => model.userProfile.Email)
                </a>
            </div>
        </div>
    </header>
    <div class="left-tab" style="height: 100%;">
        <div class="tab" style="height: 100%;">
            <form action="/Setting/Index">
                <button class="tablinks" id="defaultOpen" href="/Login">Locations</button>
            </form>
            <form action="/Setting/Statuses">
                <button class="tablinks">Statuses</button>
            </form>
            <form action="/Setting/Vendors">
                <button class="tablinks">Vendors</button>
            </form>
            <form action="/Setting/Types">
                <button class="tablinks">Types</button>
            </form>
        </div>

        <div class="right-tab" style="height=100%">

        </div>
    </div>
