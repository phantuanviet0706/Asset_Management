@page
@model Project_PRN.Pages.Setting.VendorsModel
@{
    var profile = Model.userProfile;
    Layout = "_Layout";
    var i = 1;
}
<link rel="stylesheet" href="~/css/Settings.css" />

<header class="sticky-header">
    <div id="navbar">
        <a href="/Asset">Home</a>
        <a href="/AssetTransaction">Transactions</a>
        <a href="/Setting">Settings</a>
        <div id="user-info" style="float: right;">
            <a asp-page="/User/Details" asp-route-id="@profile.Id">
                @Html.DisplayFor(model => model.userProfile.Email)
            </a>
        </div>
    </div>
</header>
<div class="left-tab" style="height: 100%;">
    <div class="tab" style="height: 100%;">
        <button class="tablinks" onclick="location.href='/Setting/Index'" id="defaultOpen" href="/Login">Locations</button>
        <button class="tablinks" onclick="location.href='/Setting/Statuses'">Statuses</button>
        <button class="tablinks" onclick="location.href='/Setting/Vendors'">Vendors</button>
        <button class="tablinks" onclick="location.href='/Setting/Types'">Types</button>
    </div>
</div>

@if(Model.vendors.Count == 0)
{
    <div class="empty-state right-tab">
        <div>No vendor found. Please <a href="/AssetVendor/Create">Create</a> a new one</div>
    </div>

}else
{
    <div class="right-tab">
        <a href="/AssetVendor/Create" class="create-new-btn">Create new Vendor</a>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.vendors[0].Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.vendors[0].Name)
                    </th>
                    <th style="width: 150px;">
                        Contact Name
                    </th>
                    <th style="width: 150px;">
                        @Html.DisplayNameFor(model => model.vendors[0].Phone)
                    </th>
                    <th style="width: 200px;">
                        @Html.DisplayNameFor(model => model.vendors[0].Email)
                    </th>
                    <th>
                        Edit
                    </th>
                    <th>
                        Detail
                    </th>
                    <th>
                        Delete
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.vendors)
                {
                    <tr>
                        <td>
                            @(i++)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <a asp-page="/AssetVendor/Edit" asp-route-id="@item.Id">Edit</a>
                        </td>
                        <td>
                            <a asp-page="/AssetVendor/Details" asp-route-id="@item.Id">Details</a>
                        </td>
                        <td>
                            <a asp-page="/AssetVendor/Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

