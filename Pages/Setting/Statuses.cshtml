@page
@model Project_PRN.Pages.Setting.StatusesModel
@{
    var profile = Model.userProfile;
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/Settings.css" />

<header class="sticky-header">
    <div id="navbar">
        <a href="/Asset">Home</a>
        <a href="">News</a>
        <a href="/Setting">Settings</a>
        <div id="user-info" style="float: right;">
            <a asp-page="/User/Details" asp-route-id="@profile.Id">
                @Html.DisplayFor(model => model.userProfile.Email)
            </a>
        </div>
    </div>
</header>
<div class="left-tab" style="height: 100%;">
    <div class="tab" style="height: 100%;">
        <button class="tablinks" onclick="location.href='/Setting/Index'" id="defaultOpen" href="/Login">Locations</button>
        <button class="tablinks" onclick="location.href='/Setting/Statuses'">Statuses</button>
        <button class="tablinks" onclick="location.href='/Setting/Vendors'">Vendors</button>
        <button class="tablinks" onclick="location.href='/Setting/Types'">Types</button>
    </div>
</div>

@if (Model.status.Count == 0)
{
    <div class="empty-state right-tab">
        <div>No status found. Please <a href="/AssetStatus/Create">Create</a> a new one</div>
    </div>
} else
{
    <div class="right-tab">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.status[0].Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.status[0].Name)
                    </th>
                    <th style="width: 250px;text-align:center;">
                        Available To Use
                    </th>
                    <th style="width: 250px;text-align:center;">
                        @Html.DisplayNameFor(model => model.status[0].Active)
                    </th>
                    <th style="width: 250px;text-align:center;">
                        Currently In Use
                    </th>
                    <th>
                        Edit
                    </th>
                    <th>
                        Detail
                    </th>
                    <th>
                        Delete
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.status)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td style="width: 250px;text-align:center;">
                            @{
                                if (item.AvailableToUse == 1)
                                {
                                    <input type="checkbox" checked onclick="return false;" />

                                }
                                else
                                {
                                    <input type="checkbox" onclick="return false;" />
                                }
                            }
                        </td>
                        <td style="width: 250px;text-align:center;">
                            @{
                                if (item.Active == 1)
                                {
                                    <input type="checkbox" checked onclick="return false;" />

                                }
                                else
                                {
                                    <input type="checkbox" onclick="return false;" />
                                }
                            }
                        </td>
                        <td style="width: 250px;text-align:center;">
                            @{
                                if (item.CurrentlyInUse == 1)
                                {
                                    <input type="checkbox" checked onclick="return false;" />

                                }
                                else
                                {
                                    <input type="checkbox" onclick="return false;" />
                                }
                            }
                        </td>
                        <td>
                            <a asp-page="./AssetStatus/Edit" asp-route-id="@item.Id">Edit</a> |
                        </td>
                        <td>
                            <a asp-page="./AssetStatus/Details" asp-route-id="@item.Id">Details</a> |
                        </td>
                        <td>
                            <a asp-page="./AssetStatus/Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
